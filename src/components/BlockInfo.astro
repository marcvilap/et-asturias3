---
import { Image } from 'astro:assets'

interface Props {
	image: ImageMetadata
	texto: Text
}

const { image, texto } = Astro.props
---

<div class="lg:flex">
	<div class="lg:basis-2/5">
		<div class="sticky top-0">
			<div class="absolute bottom-0 w-full bg-black/50 p-2 px-4 text-right font-bold text-white">
				{texto}
			</div>

			<div><Image class="w-full object-cover lg:h-screen" src={image} width={1080} densities={[2]} quality={90} alt="" /></div>
		</div>
	</div>
	<div class="lg:basis-3/5">
		<!-- <div class="lg:min-h-screen"></div> -->
		<div class="flex items-center justify-center py-24 pr-12 pl-6 lg:min-h-screen lg:pr-6 lg:pl-12">
			<div class="grid w-full max-w-lg gap-8 text-pretty text-stone-600"><slot /></div>
		</div>
	</div>
</div>
